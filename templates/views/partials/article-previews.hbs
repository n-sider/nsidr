<ol class="article-previews">
  {{#each articles}}
  <li>
    <a href="/archive/{{ slug }}">
      <article>

        <header class="preview-header">
          {{#if image}}
          <img src="{{ image }}">
          {{/if}}
          <div>
            <h1>{{ title }}</h1>
            <small>
              {{#if authors}}
              <span>
                <i class="fad fa-user{{#if multipleAuthors}}-friends{{/if}}" style="--fa-secondary-opacity: 0.70"></i>
                <ol>
                  {{#each authors}}
                  <li>{{ name.full }}</li>
                  {{/each}}
                </ol>
              </span>
              {{/if}}
              <span>
                <i class="fad fa-calendar" style="--fa-secondary-opacity: 0.70"></i> {{ displayDate }}
              </span>
            </small>
          </div>
        </header>

        {{#if blurb}}
        <div class="preview-body">
          {{{ blurb }}}
        </div>
        {{/if}}

      </article>
    </a>
  </li>
  {{/each}}
</ol>
