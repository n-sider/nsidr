<article class="post-template {{ post.topic }}">

  {{#if isFeatured}}
  <div class="featured"><i class="fas fa-rocket"></i>Featured Post</div>
  {{/if}}

  <header class="post-header">
    <img src="{{ getMood post.authors.[0] post.mood }}">
    <div>
      <h1><a href="/posts/{{ post.slug }}">{{ post.title }}</a></h1>
      <small>
        <i class="fas fa-user{{#if post.multipleAuthors}}-friends{{/if}}"></i>
        <ul>
          {{#each post.authors}}
          <li><a href="/posts?authors={{ name.full }}">{{ name.full }}</a></li>
          {{/each}}
        </ul>
        <i class="fas fa-calendar"></i> {{ post.displayDate }}
      </small>
    </div>
  </header>

  <div class="post-body">
    {{{ post.content }}}
  </div>

  <footer class="post-footer">
    {{#if post.tags}}
    <span class="tag-icon"><i class="fas fa-tag{{#if post.multipleTags}}s{{/if}}"></i></span>
    {{/if}}
    <ul>
      {{#each post.tags}}
      <li><a href="/posts?tags={{ encodedName }}">{{ name }}</a></li>
      {{/each}}
    </ul>
    <span class="top-icon"><i class="fas fa-arrow-alt-up"></i></span>
  </footer>

</article>
